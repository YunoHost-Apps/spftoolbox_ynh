{
    "name": "SPFtoolbox",
    "id": "spftoolbox",
    "packaging_format": 1,
    "description": {
        "en": "Application to check Domain Name settings.",
        "fr": "Application qui permet de tester son nom de domaine."
    },
    "version": "1.1~ynh2",
    "url": "http://spftoolbox.com/",
    "license": "MIT",
    "maintainer": {
        "name": "frju365",
        "email": "abld@tutanota.com",
        "url": "https://www.abld.info"
    },
    "requirements": {
        "yunohost": ">= 4.2.4"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.3-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/example",
                "default": "/example"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
}
